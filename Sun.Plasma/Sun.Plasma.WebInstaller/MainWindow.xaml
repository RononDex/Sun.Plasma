<Window x:Class="Sun.Plasma.WebInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="400" Width="600" Style="{StaticResource SunWindow}">
    <DockPanel>
        <Label DockPanel.Dock="Top" Style="{StaticResource LblTitle}">Installing Sun.Plasma</Label>
        <ProgressBar IsIndeterminate="True" Height="30" DockPanel.Dock="Top" VerticalAlignment="Top" />
        <Label DockPanel.Dock="Top" Style="{StaticResource LblContent}">Please wait while Sun.Plasma is installing...</Label>
        <GroupBox DockPanel.Dock="Top">
            <RichTextBox Style="{StaticResource TbxBlockStyle}" Name="TbxStatus">
                
            </RichTextBox>
        </GroupBox>
    </DockPanel>
</Window>
