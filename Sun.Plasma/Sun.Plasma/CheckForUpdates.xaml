<Window x:Class="Sun.Plasma.CheckForUpdates"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CheckForUpdates" Width="400" Height="160" Style="{StaticResource SunWindow}">
    <GroupBox>
        <StackPanel Orientation="Vertical">
            <Label Style="{StaticResource LblTitle}">Checking for updates. Please wait...</Label>
            <ProgressBar IsIndeterminate="True" HorizontalAlignment="Stretch" Margin="5" Height="30" />
        </StackPanel>
    </GroupBox>
</Window>
