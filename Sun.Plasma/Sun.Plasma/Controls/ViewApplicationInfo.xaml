<UserControl x:Class="Sun.Plasma.Controls.ViewApplicationInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" >
    <DockPanel LastChildFill="True">
        <StackPanel Orientation="Vertical">
            <Label Style="{StaticResource LblContent}" FontSize="24pt">PLASMA</Label>
            <Label Style="{StaticResource LblContent}" FontWeight="Bold" FontSize="16pt">Publication of Logistics And Servicemen Main Assigments</Label>
            <Label Style="{StaticResource LblContent}">Plasma is a community application for the SUN community. It aims to provide an easier way to manage and organise the group</Label>
            <StackPanel Orientation="Horizontal" Margin="0 30 0 0">
                <Label Style="{StaticResource LblContent}">Plasma Version:</Label>
                <Label Style="{StaticResource LblContent}" Content="{Binding PlasmaVersion}" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LblContent}">SelfUpdater Version:</Label>
                <Label Style="{StaticResource LblContent}" Content="{Binding SelfUpdaterVersion}" />
            </StackPanel>
        </StackPanel>
    </DockPanel>
</UserControl>
